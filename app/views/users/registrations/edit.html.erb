<%= provide :title, "ユーザー編集ページ" %>
<%= devise_error_messages %>

<div class="container user_form">
  <h2 class="form_title text-center">ユーザー編集ページ</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'edit_user', class: 'edit_user', local: true do |f| %>

  <!--アカウント編集時に名前を入力できるようにフォームを追加-->
  <div class="form-group">
    <%= f.label :name, "ユーザー名(10文字以内)" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <!--アカウント編集時にプロフィールを入力できるようにフォームを追加-->
  <div class="form-group">
    <%= f.label :profile, "(200文字以内)" %><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "更新", class: "btn btn-primary btn-block" %>
  </div>
  <% end %>

  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "トップページ", root_path, class: 'btn btn-info btn-block mb-4' %>
    <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: 'btn btn-danger btn-block' %>
    <% end %>
  </div>