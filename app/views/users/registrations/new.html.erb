<%= provide :title, "新規ユーザー登録" %>
<%= devise_error_messages %>

<div class="container user_form">
  <h2 class="form_title text-center">新規ユーザー登録</h2>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <!--サインアップ時に名前を入力できるようにフォームを追加-->
  <div class="form-group">
    <%= f.label :name, "ユーザー名(10文字以内)" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
  </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>