<%= provide :title, "新規ユーザー登録" %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="container user-form">
  <h2 class="form_title has-text-centered">新規登録</h2>
  <div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= f.label :name, "ユーザー名" %><br />
      <div class="control has-icons-left has-icons-right">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </div>
    </div>
  </div>

  <div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= f.label :email, "メールアドレス" %><br />
      <div class="control has-icons-left has-icons-right">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>
  </div>

  <div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= f.label :password %><br />
      <div class="control has-icons-left">
        <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= f.label :password_confirmation %><br />
      <div class="control has-icons-left">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </div>
    </div>
  </div>


  <div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= f.submit "新規登録", class: "button is-link is-outlined is-fullwidth" %>
    </div>
  </div>

  <% end %>

  <div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth">
      <%= render "devise/shared/links" %>
    </div>
  </div>