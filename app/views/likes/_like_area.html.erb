<div id="like_<%= post.id %>">
  <% if current_user && current_user.already_liked?(post) %>
  <%= link_to post_like_path(post_id: post.id, id: post.id), method: :delete, remote: true do %>
  <i class="fas fa-heart unlike-btn"></i><%= post.likes.count %>
  <% end %>
  <% else %>
  <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
  <i class="far fa-heart like-btn"></i><%= post.likes.count %>
  <% end %>
  <% end %>
</div>