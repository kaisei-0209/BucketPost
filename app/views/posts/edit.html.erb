<%= provide :title, "投稿編集ベージ" %>

<div class="container is-mobile user-form">
  <h2 class="form_title has-text-centered">投稿編集ページ</h2>
  <%= form_with(model: @post, local: true) do |f| %>
  <div class="columns">
    <div class="column is-half is-offset-one-quarter has-text-centered">
      <% if current_user.image.present? %>
      <%= image_tag current_user.image.url %>
      <% else %>
      <%= image_tag "default.png" %>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <%= f.label :title, "タイトル" %><br />
      <div class="control">
        <%= f.text_field :title, class: "input" %>
      </div>
    </div>
  </div>
  <!--投稿編集-->
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <%= f.label :content, "やりたいことを投稿してください", class: "is-italic" %><br />
      <div class="control">
        <%= f.text_area :content, class: "input textarea is-primary", placeholder: "今年はスカイダイビングをして一つのやりたいことを実現します！" %>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column is-half is-offset-one-quarter has-text-centered">
      <div class="post_edit_image">
        <% if @post.image.present? %>
        <%= image_tag @post.image.url %>
        <p><%= f.check_box :remove_image %>画像を削除する</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <%= f.submit "変更を保存", class: "button is-link is-fullwidth" %>
    </div>
  </div>
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <%= link_to "キャンセル", user_path(current_user), class: "button is-light is-fullwidth" %>
    </div>
  </div>
</div>
<% end %>