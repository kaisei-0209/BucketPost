<nav class="navbar has-background-primary" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <%= link_to  "Bucket Posts", root_path, class: "navbar-item" %>

    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div class="navbar-menu" id="navMenu">
    <div class="navbar-start">
      <% if user_signed_in? %>
      <%= link_to  "投稿一覧", "#", class: 'navbar-item' %>
      <%= link_to  "新規投稿", "#", class: 'navbar-item' %>
      <% else %>
      <%= link_to  "人気投稿", "#", class: "navbar-item" %>
      <%= link_to  "ログイン", new_user_session_path, class: "navbar-item" %>
      <%= link_to  "新規登録", new_user_registration_path, class: "navbar-item" %>
      <% end %>

      <div class="navbar-item has-dropdown is-hoverable">
        <% if user_signed_in? %>
        <a class="navbar-link">
          <%= current_user.name %>
        </a>
        <div class="navbar-dropdown">

          <%= link_to  "マイページ", user_path(current_user), class: "navbar-item" %>
          <%= link_to  "プロフィール編集", edit_user_registration_path, class: "navbar-item" %>
          <%= link_to  "ログアウト", sign_out_path, class: "navbar-item" %>
          <% end %>
        </div>
      </div>
    </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() { //①

    var $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0); //②

    if ($navbarBurgers.length > 0) {

      $navbarBurgers.forEach(function($el) {
        $el.addEventListener('click', function() { //③

          var target = $el.dataset.target; //④
          var $target = document.getElementById(target); //④

          $el.classList.toggle('is-active'); //⑤
          $target.classList.toggle('is-active'); //⑤

        });
      });
    }
  });
</script>