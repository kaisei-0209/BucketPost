<nav class="navbar has-background-primary" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <%= link_to  "Bucket Posts", root_path, class: "navbar-item" %>

    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div class="navbar-menu" id="navMenu">
    <div class="navbar-start">
      <% if user_signed_in? %>
      <%= link_to  icon('fas', 'th','投稿一覧'), posts_path, class: "navbar-item" %>
      <%= link_to  icon('fas', 'rss', 'フィード'), feed_posts_path, class: "navbar-item" %>
      <%= link_to  icon('fa', 'heart','人気投稿'), popular_posts_path, class: "navbar-item" %>
      <%= link_to  icon('fa', 'edit', '新規投稿'), new_post_path, class: 'navbar-item' %>
      <% else %>
      <%= link_to  icon('fas','sign-in-alt', 'ログイン'), new_user_session_path, class: "navbar-item" %>
      <%= link_to  icon('fas','american-sign-language-interpreting', 'かんたんログイン'), users_guest_sign_in_path, method: :post, class: "navbar-item" %>
      <%= link_to icon('fas','user-plus', '新規登録'), new_user_registration_path, class: "navbar-item" %>
      <% end %>
      <div class="navbar-item has-dropdown is-hoverable">
        <% if user_signed_in? %>
        <a class="navbar-link">
          <%= icon('fa', 'user', current_user.name) %>
        </a>
        <div class="navbar-dropdown">
          <%= link_to  "マイページ", user_path(current_user), class: "navbar-item" %>
          <%= link_to  "プロフィール編集", edit_user_registration_path, class: "navbar-item" %>
          <%= link_to  "ログアウト", sign_out_path, class: 'navbar-item' %>
          </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {

    var $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0);

    if ($navbarBurgers.length > 0) {

      $navbarBurgers.forEach(function($el) {
        $el.addEventListener('click', function() {

          var target = $el.dataset.target;
          var $target = document.getElementById(target);

          $el.classList.toggle('is-active');
          $target.classList.toggle('is-active');

        });
      });
    }
  });
</script>